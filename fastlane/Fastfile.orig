    dev_domain = ENV["DEV_DOMAIN"]

    # -- Update bundle names and ids
    # - iOS
    update_info_plist(
      xcodeproj: 'Provenance.xcodeproj',
      scheme: 'Provenance', # Scheme really means target
      display_name: display_name,
      block: proc do |plist|
        bundleid = plist["PRODUCT_BUNDLE_IDENTIFIER"]
        bundleid[:PRODUCT_BUNDLE_IDENTIFIER] = "#{bundleid}#{suffix}"
      end
      # app_identifier: "#{dev_domain}.provenance#{suffix}",
    )

    # - Spotlight
    update_info_plist(
      xcodeproj: 'Provenance.xcodeproj',
      scheme: 'Spotlight',
      block: proc do |plist|
        bundleid = plist["PRODUCT_BUNDLE_IDENTIFIER"]
        bundleid[:PRODUCT_BUNDLE_IDENTIFIER] = "#{bundleid}#{suffix}.Spotlight"
      end
      # app_identifier: normal ? "$(PRODUCT_BUNDLE_IDENTIFIER)" : "#{dev_domain}.provenance${suffix}.Spotlight",
    )

    # - tvOS
    # Use the same bundle ID as iOS so it's 'universal install'
    update_info_plist(
      xcodeproj: 'Provenance.xcodeproj',
      scheme: 'ProvenanceTV',
      display_name: display_name,
      block: proc do |plist|
